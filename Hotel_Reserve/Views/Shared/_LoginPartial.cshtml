
@if (Session["Email"] != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + Session["Fname"] + "!", "Index", "Reservation",new { id = Session["Id"] } , htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="@Url.Action("LogoutCustomer","Customer")">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "RegisterCustomer", "Customer", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "LoginCustomer", "Customer", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
